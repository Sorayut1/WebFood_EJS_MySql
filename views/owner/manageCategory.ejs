<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Category Management</title>
    <link rel="stylesheet" href="/css/slidebar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <%- include('../layouts/sidebar') %>

    <!-- Main Content -->
    <div class="content" id="main-content">
        <div class="container">
            <h2>จัดการหมวดอาหาร</h2>

            <!-- Add/Edit Category Form -->
            <div class="card">
                <div class="card-header">
                    <h4 id="form-title">เพิ่มหมวดอาหาร</h4>
                </div>
                <div class="card-body">
                    <form id="category-form" onsubmit="saveCategory(); return false;">
                        <input type="hidden" id="category-id">
                        <div class="mb-3">
                            <label for="category_name" class="form-label">ชื่อหมวดอาหาร</label>
                            <input type="text" class="form-control" id="category_name" required>
                        </div>
                        <button type="submit" class="btn btn-primary">บันทึกหมวดอาหาร</button>
                    </form>
                    
                </div>
            </div>

            <!-- Category List -->
            <h3 class="mt-5">Category List</h3>
            <table class="table table-striped" id="category-table">
                <thead>
                    <tr>
                        <th>ไอดี</th>
                        <th>ชื่อหมวดอาหาร</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="category-list">
                    <!-- Category items will be populated here via JavaScript -->
                     
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal Form for Category -->
    <div id="categoryModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="modalTitle" class="modal-title">Add/Edit Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modal_category_id">

                    <label>Category Name:</label>
                    <input type="text" id="modal_category_name" class="form-control">

                    

                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="saveCategory()">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript to preview uploaded image -->
    <script>
        function previewCategoryImage(event) {
            const imageDisplay = document.getElementById('category_image_display');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    imageDisplay.innerHTML = `<img src="${e.target.result}" width="100">`;
                };
                reader.readAsDataURL(file);
            }
        }

        // Add your JavaScript logic to manage category data here
    </script>

    <script src="/js/sidebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/manageCategory.js"></script>
</body>
</html>
